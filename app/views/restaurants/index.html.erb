<div class="container">
  <h1>Restaurants</h1>
  <br>
    <div class="row">
      <table class="table table-hover">
        <thead class="">
          <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Category</th>
            <th>Phone Number</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
        <% @restaurants.each do |restaurant| %>
          <tr>
            <td><%= restaurant.name %></td>
            <td><%= restaurant.address %></td>
            <td><%= restaurant.category %></td>
            <td><%= restaurant.phone_number %></td>
            <td><%= link_to "Details", restaurant_path(restaurant), class:"btn btn-primary" %>
              <%= link_to "Add review", new_restaurant_review_path(restaurant), class:"btn btn-info" %></td>
            <% end %>
          </tr>
        </tbody>
      <table>
    </div>
</div>
